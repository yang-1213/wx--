/** 
 *  页面样式
 *------------------------------------------------ 
 **/

page {
  height: 100%;
}

swiper {
  height: 850rpx;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0px 2px 12px 0px rgba(201, 201, 201, 0.1);
}

.header .left {
  display: flex;
  align-items: center;
}

.left .day {
  font-family: PingFang-SC-Bold;
  font-size: 42rpx;
  padding-right: 14rpx;
  font-weight: 700;
}

.day text {
  font-weight: 400;
  font-size: 32rpx;
}

.left .year {
  height: 42rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
  font-family: PingFang-SC-Medium;
  font-size: 22rpx;
  line-height: 22rpx;
  padding-left: 14rpx;
}

.header .right {
  display: flex;
  align-items: center;
}

.love view {
  position: absolute;
  font-size: 22rpx;
  color: #bbb;
  /* top: -40rpx;
  left: 40rpx; */
  transform: translate(10rpx, -50rpx) rotateZ(-45deg);
}

.right .share {
  font-size: 40rpx;
  margin-left: 80rpx;
}


/* 分类样式 */
.kind{
  width: 100%;
  /* height: 500rpx; */
  position: relative;
}

.kind .tag{
  position: absolute;
  width: 50rpx;
  font-size: 50rpx;
  left: 60rpx;
  bottom: -60rpx;
}
.tag .iconyezi{
  position: absolute;
  font-size: 50rpx;
  bottom: 50rpx;
  left: 100%;
  color: #00a4ff;
}
.tag .iconyezi:nth-of-type(1){
  left: -100%;
  transform: rotateY(180deg);
}


/* 摘要 */
.abstract{
  display: block;
  width: 500rpx;
  margin: 80rpx auto 0;
  text-align: center;
}

/* 标题 */
.title{
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  width: 600rpx;
  padding: 0 50rpx;
  margin: 100rpx auto;
  font-size: 30rpx;
  line-height: 60rpx;
  background-color: rgb(231, 231, 231); 
  border-radius: 30rpx;
}

.iconbofang:nth-of-type(1){
  /* transform-origin: left center; */
  transform: rotateZ(180deg);
}
