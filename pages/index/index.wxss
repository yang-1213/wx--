/**index.wxss**/

/** 
 *  页面样式
 *------------------------------------------------ 
 **/
 page{
   height: 100%;
 }
swiper{
  height: 100%;
}

.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
	height: 100rpx;
	background-color: #ffffff;
	box-shadow: 0px 2px 12px 0px 
		rgba(201, 201, 201, 0.1);
}
.header .left{
  display: flex;
  align-items: center;
}
.left .day{
	font-family: PingFang-SC-Bold;
	font-size: 42rpx;
  padding-right: 14rpx;
  font-weight: 700;
}
.day text{
  font-weight: 400;
	font-size: 32rpx;
}
.left .year{
  height: 42rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
	font-family: PingFang-SC-Medium;
	font-size: 22rpx;
  line-height: 22rpx;
  padding-left: 14rpx;
}

.header .right{
  display: flex;
  align-items: center;
}

.love view{
  position: absolute;
	font-size: 22rpx;
	color: #bbbbbb;
  /* top: -40rpx;
  left: 40rpx; */
  transform: translate( 10rpx,-50rpx) rotateZ(-45deg);
}
.right .share{
  width: 30rpx;
  height: 30rpx;
  margin-right: 76rpx;
}